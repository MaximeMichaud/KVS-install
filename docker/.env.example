# Domain Configuration
DOMAIN=example.com
EMAIL=admin@example.com
USE_WWW=false

# MariaDB - Generate passwords with: openssl rand -base64 24
MARIADB_VERSION=11.4
MARIADB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MARIADB_PASSWORD=CHANGE_ME_KVS_PASSWORD

# PHP Configuration (KVS 6.x requires PHP 8.1)
PHP_VERSION=8.1
IONCUBE=YES
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=2048M
PHP_POST_MAX_SIZE=2048M
PHP_MAX_EXECUTION_TIME=300

# Cache: memcached (stable, 256MB+) or dragonfly (faster, 512MB+ required)
COMPOSE_PROFILES=memcached
CACHE_MEMORY=256

# Ports (change if 80/443 are in use)
HTTP_PORT=80
HTTPS_PORT=443
